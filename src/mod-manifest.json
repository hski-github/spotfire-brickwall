    "apiVersion": "1.1",
    "version": "1.1",
    "name": "Kanban Board",
    "id": "spotfire-kanban-hski",
    "icon": "icon.svg",
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "dual",
            "dropTarget": {
                "icon": "Color",
                "description": "Color tile by {0}"
            }
        },
        "axes": [
            {
                "name": "Column",
                "mode": "categorical",
                "placement": "top",
                "dropTarget": {
                    "icon": "ColumnAxis",
                    "description": "Use {0} as column for Kanban board"
                }
            },
            {
                "name": "Card",
                "mode": "categorical",
                "placement": "bottom",
                "dropTarget": {
                    "icon": "RowAxis",
                    "description": "Use {0} as text on card for Kanban board"
                }
            },
            {
                "name": "Icon",
                "mode": "categorical",
                "placement": "right",
                "dropTarget": {
                    "icon": "Icon",
                    "description": "Use {0} to define icon on the card"
                }
            }
        ]
    },
